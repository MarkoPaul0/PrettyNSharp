<UserControl x:Class="WPFSharpener.SharpDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFSharpener"
             mc:Ignorable="d" 
             x:Name="SDControl"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Template>
        <ControlTemplate TargetType="UserControl">
            <Border Name="main_border" Background="{Binding ElementName=SDControl, Path=Background}">
                <Path Name="vector" Stretch="{Binding ElementName=SDControl, Path=Stretch}" 
                      Data="{Binding ElementName=SDControl, Path=Vector.Data}" 
                      Fill="{Binding ElementName=SDControl, Path=VectorBrush}"
                      Width="{Binding ElementName=SDControl, Path=ActualVectorWidth}"
                      Height="{Binding ElementName=SDControl, Path=ActualVectorHeight}"/>
            </Border>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>
